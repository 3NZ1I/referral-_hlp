# Docker Compose Project Configuration
# CRITICAL: Keep this consistent to ensure volume names don't change
COMPOSE_PROJECT_NAME=referral_hlp

# Database Configuration
DATABASE_URL=postgresql+psycopg2://user:SecurePasswordHere@db/referral_db
POSTGRES_USER=user
POSTGRES_PASSWORD=SecurePasswordHere
POSTGRES_DB=referral_db

# Backend Configuration
SECRET_KEY=generate-with-openssl-rand-hex-32
JWT_EXP_MINUTES=120

# Frontend Configuration (build-time)
VITE_API_URL=https://api.bessar.work

